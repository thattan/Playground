@model PokeApiNet.Pokemon

<div class="modal" tabindex="-1" role="dialog" id="pokemon-modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Model.Name</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card mb-4 shadow-sm">
                    <div class="row d-flex justify-content-center">
                        <img style="height: 150px; width: 162.6px; display: block; " src="@Model.Sprites.FrontDefault">
                        <img style="height: 150px; width: 162.6px; display: block; " src="@Model.Sprites.BackDefault">
                    </div>
                    <div class="row d-flex justify-content-center">
                        <img style="height: 150px; width: 162.6px; display: block; " src="@Model.Sprites.FrontShiny">
                        <img style="height: 150px; width: 162.6px; display: block; " src="@Model.Sprites.BackShiny">
                    </div>
                    <div class="card-body">
                        <p class="card-text">@Model.LocationAreaEncounters</p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>